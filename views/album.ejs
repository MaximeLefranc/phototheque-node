<%- include('partials/header') %>
<div class="container">
    <div class="row mt-4">
        <a href="/" class="m-4">&lt; Retour</a>
        <h1 class="mb-4"><%= album.title %></h1>
    </div>
    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ajouter une image</h5>
                    <form action="/albums/<%= album._id %>" method="POST" class="form-inline" enctype="multipart/form-data">
                        <input name="image" type="file" class="form-control-file">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </form>
                    <% if (errors.length) { %>
                        <div class="alert alert-danger mt-4 mb-2" role="alert"><%= errors[0] %></div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        <% album.images.forEach((image) => { %>
            <div class="col">
                <div class="card">
                    <img src='/static/uploads/<%= album._id %>/<%= image %>' alt="<%= image %>" class="card-img-top" />
                    <div class="card-body">
                        <h5><%= image %></h5>
                        <a href="#">Supprimer</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer') %>